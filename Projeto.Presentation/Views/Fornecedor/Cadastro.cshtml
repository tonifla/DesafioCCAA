@model Projeto.Presentation.Models.FornecedorCadastroViewModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Cadastro de fornecedores</h4>
<hr />
<div class="row">
    <div class="col-4">
        @using (Html.BeginForm())
        {
            <label>Nome do fornecedor:</label>
            @Html.TextBoxFor(model => model.Nome,
           new
                {
                    @class = "form-control",
                 @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
            <br />

            <label>Email do fornecedor:</label>
            @Html.TextBoxFor(model => model.Email,
           new
                {
                    @class = "form-control",
                 @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Email)
            </span>
            <br />

            <label>Telefone do fornecedor:</label>
            @Html.TextBoxFor(model => model.Telefone,
           new
                {
                    @class = "form-control",
                 @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Telefone)
            </span>
            <br />

            <label>CNPJ do fornecedor:</label>
            @Html.TextBoxFor(model => model.Cnpj,
           new
                {
                    @class = "form-control",
                 @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Cnpj)
            </span>
            <br />

            <input type="submit" value="Cadastrar Fornecedor" class="btn btn-success" />
            <br />
            <br />

            <strong>@TempData["Mensagem"]</strong>
        }
    </div>
</div>