@model Projeto.Presentation.Models.CategoriaEdicaoViewModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Atualização de dados das categorias</h4>
<hr />
<div class="row">
    <div class="col-4">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.IdCategoria)

            <label>Nome da categoria:</label>
            @Html.TextBoxFor(model => model.Nome,
           new
                {
                    @class = "form-control",
                 @placeholder = "Digite aqui"
                })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
            <br />

            <input type="submit" value="Editar Categoria" class="btn btn-primary" />
            <br />
            <br />

            <strong>@TempData["Mensagem"]</strong>
        }
    </div>
</div>